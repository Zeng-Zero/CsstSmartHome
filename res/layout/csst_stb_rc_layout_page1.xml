<?xml version="1.0" encoding="utf-8"?>
<!-- 第一页 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >
    <!-- 静音、电源 -->
    <RelativeLayout
        android:id="@+id/layout_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip" 
        >
        <!-- 静音 -->
        <Button
            android:id="@+id/mBtnMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@drawable/csst_tv_mute_btn_bg" 
            android:textColor="@color/white"
           />
        <!-- 电源 -->
        <Button
            android:id="@+id/mBtnPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtnMute"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/csst_tv_power_btn_bg"
            android:textColor="@color/white" />
    </RelativeLayout>
    <!-- 设置、声道、音量+ -->
    <RelativeLayout
        android:id="@+id/layout_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_01"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip" >
        <!-- 设置-->
        <Button
            android:id="@+id/mBtnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_setting_key" 
            android:textColor="@color/white"/>
        <!-- AUDIO -->
        <Button
            android:id="@+id/mBtnAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtnSetting"
            android:layout_centerInParent="true"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_audio_key" 
            android:textColor="@color/white"/>
        <!-- 音量加 -->
        <Button
            android:id="@+id/mBtnVolUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtnSetting"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_volup_key"
            android:textColor="@color/white" />
    </RelativeLayout>
    <!-- INFO、RADIO、RSTD -->
    <RelativeLayout
        android:id="@+id/layout_03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_02"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip" >
        <!-- itv -->
        <Button
            android:id="@+id/mBtniTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_itv_key"
            android:textColor="@color/white" />
        <!-- TV/AV -->
        <Button
            android:id="@+id/mBtnTvAv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtniTv"
            android:layout_centerInParent="true"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_tvav_key" 
            android:textColor="@color/white"/>
        <!-- 音量- -->
        <Button
            android:id="@+id/mBtnVolDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtniTv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_voldown_key" 
            android:textColor="@color/white"/>
    </RelativeLayout>
    <!-- Shift、Pause、Sub -->
    <RelativeLayout
        android:id="@+id/layout_04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_03"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip" >
        <!-- 上一页 -->
        <Button
            android:id="@+id/mBtnLPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_lastpage_key"
            android:textColor="@color/white" />
        <!-- 导视 -->
        <Button
            android:id="@+id/mBtnGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtnLPage"
            android:layout_centerInParent="true"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_guide_key"
            android:textColor="@color/white" />
        <!-- 下一页 -->
        <Button
            android:id="@+id/mBtnNPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtnLPage"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/csst_tv_btn_def_bg"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_nextpage_key" 
            android:textColor="@color/white"/>
    </RelativeLayout>
    <!-- 音量、频道切换 -->
    <RelativeLayout
        android:id="@+id/layout_05"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layout_04"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="5dip"
        android:gravity="center" >
        <com.csst.smarthome.widget.CsstCircleView
            android:id="@+id/layout_vol_ch"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_centerInParent="true" />
        <!-- 主页:左上 -->
        <Button
            android:id="@+id/mBtnHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_vol_ch"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="-30dip"
            android:layout_toLeftOf="@id/layout_vol_ch"
            android:background="@drawable/csst_tv_menu_btn_bg"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_homepage_key"
            android:textColor="@color/white" />
        <!-- 信息:右上 -->
        <Button
            android:id="@+id/mBtnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_vol_ch"
            android:layout_alignBaseline="@id/mBtnHomePage"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-30dip"
            android:layout_marginRight="15dip"
            android:layout_toRightOf="@id/layout_vol_ch"
            android:background="@drawable/csst_tv_exit_btn_bg"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_info_key"
            android:textColor="@color/white" />
        <!-- 返回:左下 -->
        <Button
            android:id="@+id/mBtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/layout_vol_ch"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="-30dip"
            android:layout_toLeftOf="@id/layout_vol_ch"
            android:background="@drawable/csst_tv_epg_btn_bg"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_back_key"
            android:textColor="@color/white" />
        <!-- 退出:右下 -->
        <Button
            android:id="@+id/mBtnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mBtnBack"
            android:layout_alignParentRight="true"
            android:layout_below="@id/layout_vol_ch"
            android:layout_marginLeft="-30dip"
            android:layout_marginRight="15dip"
            android:layout_toRightOf="@id/layout_vol_ch"
            android:background="@drawable/csst_tv_fav_btn_bg"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip"
            android:text="@string/csst_stbrc_exit_key" 
            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>