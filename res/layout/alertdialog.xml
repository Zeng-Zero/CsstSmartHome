<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/info_setting_circle"
    android:layout_marginLeft="20.0dip"
    android:layout_marginRight="20.0dip"
    
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/alertdialog_title"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:textSize="30.0dip"
        />
    <TextView 
        android:id="@+id/alertdialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FF000000"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.dip"
        android:layout_marginBottom="20.0dip"
        android:text="afasfaffffasfdaafasfaffffasfdaafasfaffffasfdaafasfaffffasfdaafasfaffffasfdaafasfaffffasfda"
        />
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffb5b2b5"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/alertdialog_yes"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:background="@drawable/exit_button"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:layout_gravity="center"
            />
        
    </LinearLayout>

</LinearLayout>
