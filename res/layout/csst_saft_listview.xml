<?xml version="1.0" encoding="utf-8"?>
<!-- 	
	添加情景模式界面
 -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addModelcontent"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/currentbackground"
    >
	<!-- 标题栏 -->
	<RelativeLayout 
	android:id="@+id/layout_top"
	android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:gravity="center_vertical"
    android:background="@color/currenttitle"
     >
	<!-- 返回 -->
	<Button 
	    android:id="@+id/mBtnsafeCancel"
	    android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
		android:background="@color/btntitlebackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/csst_back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size" />
	<!-- 标题 -->
    <TextView
        android:id="@+id/mTVsafeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dip"
        android:shadowColor="@color/color_shadow"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="@string/csst_safe_title"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:textStyle="bold" />
    <!-- 完成 -->
    <Button
        android:id="@+id/mBtnsafeDone"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
		android:background="@color/btntitlebackground"
        android:text="@string/csst_done"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/round_btn_textsize" />
</RelativeLayout>
	 <RelativeLayout
        android:id="@+id/rl_add_house"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="6dp"
        >
   		<TextView 
   		    android:layout_width="wrap_content"
   		    android:layout_height="fill_parent"
   		    android:id="@+id/tvsaftsearch"
   		    android:text="@string/csst_safe_search"
   		    android:gravity="center"
   		    android:textSize="@dimen/round_btn_textsize"
   		    android:textColor="@color/color_white"
   		    android:layout_alignParentLeft="true"
   		    />
        <Button
            android:id="@+id/btnsafeaddaction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
			android:background="@drawable/btn_volume_up"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:textSize="18sp" />
    </RelativeLayout>
     <TextView
			android:layout_width="fill_parent"
 		    android:layout_height="1dp"
 		    android:background="@color/whitesmoke"
 		 ></TextView>
    <ListView
        android:id="@+id/lv_sensorlistview"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:cacheColorHint="#00000000"  
        >
    </ListView>
    <TextView
			android:layout_width="fill_parent"
 		    android:layout_height="1dp"
 		    android:background="@color/whitesmoke"
 		 ></TextView>
    	<Button 
			android:layout_width="fill_parent"
 		    android:layout_height="45dp"
 		    android:id="@+id/btnsafemansetting"
 		    android:layout_gravity="center_horizontal"
 		    android:text="@string/csst_safe_mansetting"
 		    android:gravity="center"
 		    android:textColor="@color/whitesmoke"
 		    android:textSize="@dimen/round_btn_textsize"
 		    android:background="@color/green"
	  		 />
     	<TextView
			android:layout_width="fill_parent"
 		    android:layout_height="1dp"
 		    android:background="@color/whitesmoke"
 		 ></TextView>
        <Button 
			android:layout_width="fill_parent"
 		    android:layout_height="45dp"
 		    android:id="@+id/btnsafeautosetting"
 		    android:layout_gravity="center_horizontal"
 		    android:text="@string/csst_safe_autosetting"
 		    android:gravity="center"
 		    android:textSize="@dimen/round_btn_textsize"
 		    android:textColor="@color/whitesmoke"
 		    android:background="@color/gray"
 		    
	  		 />
        	<TextView
			android:layout_width="fill_parent"
 		    android:layout_height="1dp"
 		    android:background="@color/whitesmoke"
 		 ></TextView>
        	<!-- 定时管理 -->
        	<Button 
			android:layout_width="fill_parent"
 		    android:layout_height="45dp"
 		    android:id="@+id/btnsafeclock"
 		    android:layout_gravity="center_horizontal"
 		    android:text="@string/csst_safe_clock"
 		    android:gravity="center"
 		    android:textColor="@color/whitesmoke"
 		    android:textSize="@dimen/round_btn_textsize"
 		    android:background="@color/green"
	  		 />
        <TextView
			android:layout_width="fill_parent"
 		    android:layout_height="1dp"
 		    android:background="@color/whitesmoke"
 		 ></TextView>
    <LinearLayout 
	    android:id="@+id/llsafeaddnumber"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_margin="5dp"
	    android:background="@color/currentbackground"
	    >
	 <!-- 名称输入标签 -->
   		<Button 
   		    android:layout_width="wrap_content"
   		    android:layout_height="35dp"
   		    android:id="@+id/btnsafeaddnumber"
   		    android:layout_gravity="center_horizontal"
   		    android:text="@string/csst_safe_addphonenumber_tip"
   		    android:gravity="center"
   		    android:background="@drawable/btn_safe_addnumbers"
   		    android:textSize="@dimen/ert"
   		    android:textColor="@color/whitesmoke"
   		    android:layout_weight="1"
   		    />
	  <EditText 
			android:layout_width="200dp"
 		    android:layout_height="35dp"
 		    android:id="@+id/etsafeaddnumber"
 		    android:layout_gravity="center_horizontal"
 		    android:hint="@string/csst_safe_inputphonenumber_tip"
 		    android:gravity="center"
 		    android:textSize="@dimen/ert"
 		    android:inputType="number"
 		    android:layout_weight="1"
 		    android:background="@drawable/csst_edittext_bg_white"
	  		 />
	</LinearLayout>
	 <TextView
			android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:background="@color/whitesmoke"
			 ></TextView>
	<LinearLayout 
	    android:id="@+id/llsafedeleltenumber"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_margin="5dp"
	    android:background="@color/currentbackground"
	    >
	 <!-- 名称输入标签 -->
   		<Button 
   		    android:layout_width="wrap_content"
   		    android:layout_height="35dp"
   		    android:id="@+id/btnsafedeletenumber"
   		    android:layout_gravity="center_horizontal"
   		    android:text="@string/csst_safe_deletephonenumber_tip"
   		    android:gravity="center"
   		    android:background="@drawable/btn_safe_addnumbers"
   		    android:textSize="@dimen/ert"
   		    android:textColor="@color/whitesmoke"
   		    android:layout_weight="1"
   		    />
	  <EditText 
			android:layout_width="200dp"
 		    android:layout_height="35dp"
 		    android:id="@+id/etsafedeletepnumber"
 		    android:layout_gravity="center_horizontal"
 		    android:hint="@string/csst_safe_inputphonenumber_tip"
 		    android:gravity="center"
 		    android:textSize="@dimen/ert"
 		    android:inputType="number"
 		    android:layout_weight="1"
 		    android:background="@drawable/csst_edittext_bg_white"
	  		 />
   	</LinearLayout>	
   	 <TextView
			android:layout_width="fill_parent"
 		    android:layout_height="1dp"
 		    android:background="@color/whitesmoke"
 		 ></TextView>
   	   <LinearLayout 
	    android:id="@+id/llsafegetnumber"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_margin="5dp"
	    android:background="@color/currentbackground"
	    >
	 <!-- 名称输入标签 -->
   		<Button 
   		    android:layout_width="wrap_content"
   		    android:layout_height="35dp"
   		    android:id="@+id/btnsafegetnumber"
   		    android:layout_gravity="center_horizontal"
   		    android:text="@string/csst_safe_getphonenumber_tip"
   		    android:gravity="center"
   		    android:background="@drawable/btn_safe_addnumbers"
   		    android:textSize="@dimen/ert"
   		    android:textColor="@color/whitesmoke"
   		    />
	</LinearLayout>	
 	<TextView
		android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="@color/whitesmoke"
		 ></TextView>
   <ListView
        android:id="@+id/lv_safenumber"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"  
        >
   	</ListView>	
    
</LinearLayout>
