<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background_color"
    android:orientation="vertical" >

    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:background="@drawable/title_background" >
  	<Button 
	    android:id="@+id/back_btn"
	    android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/btntitlebackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/csst_back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size" />
    
    <TextView 
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Custom Title"/>
    
        <Button
        android:id="@+id/mBtnDone"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/btntitlebackground"
        android:text="@string/csst_done"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_switch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_to_title" >

        <Button
            android:id="@+id/allOnBtn"
            android:layout_width="@dimen/round_btn_size"
            android:layout_height="@dimen/round_btn_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/round_btn_margin"
            android:background="@drawable/green_round_back"
            android:text="@string/switch_all_on"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textSize="@dimen/round_btn_textsize" />

        <Button
            android:id="@+id/allOffBtn"
            android:layout_width="@dimen/round_btn_size"
            android:layout_height="@dimen/round_btn_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/round_btn_margin"
            android:background="@drawable/black_round_background"
            android:text="@string/switch_all_off"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textSize="@dimen/round_btn_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_to_title" >

        <TextView
            android:id="@+id/drop_light_name_input"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/round_btn_margin"
            android:background="@android:color/white"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/csst_switch_diaodeng"
            android:textSize="25sp" />
        <CheckBox
            android:id="@+id/drop_light_checkbox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/round_btn_margin"
            android:button="@drawable/custom_switch_button" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_to_title" >

        <TextView
            android:id="@+id/track_light_name_input"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/round_btn_margin"
            android:background="@android:color/white"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/csst_switch_caodeng"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/track_light_checkbox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/round_btn_margin"
            android:button="@drawable/custom_switch_button" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_to_title" >

        <TextView
            android:id="@+id/wall_light_name_input"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/round_btn_margin"
            android:background="@android:color/white"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/csst_switch_bideng"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/wall_light_checkbox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/round_btn_margin"
            android:button="@drawable/custom_switch_button" />
    </RelativeLayout>

</LinearLayout>