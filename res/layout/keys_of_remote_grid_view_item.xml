<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/keyIcon"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:background="@drawable/blue_round_background"
        android:layout_width="@dimen/small_round_btn_size"
        android:layout_height="@dimen/small_round_btn_size" />

    <TextView 
        android:id="@+id/keyName"
        android:layout_below="@id/keyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按键名称"
        android:singleLine="true"
        android:maxLength="10"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>