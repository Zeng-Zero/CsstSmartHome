<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_top"
	android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:gravity="center_vertical"
    android:layout_alignParentTop="true"
    android:background="@color/currenttitle"
    android:layout_centerHorizontal="true" >
	<!-- 返回 -->
	<Button 
	    android:id="@+id/mBtnCancel"
	    android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/btntitlebackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/csst_back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size" />
	<!-- 标题 -->
    <TextView
        android:id="@+id/mTVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dip"
        android:shadowColor="@color/color_shadow"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="@string/csst_adddevice"
        android:textColor="@color/white"
        android:textSize="@dimen/titile"
        android:textStyle="bold" />
    <!-- 完成 -->
    <Button
        android:id="@+id/mBtnDone"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/btntitlebackground"
        android:text="@string/csst_done"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size" />
</RelativeLayout>
